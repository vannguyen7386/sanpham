                                <td><a href="customer/index/view?ID=<?php echo $s['ID']?>" 
                                       onclick="call_ajax_load_content(this, 'Chi tiết khách hàng'); return false;"><?php echo $s['name'] ?></a></td>
                                <td><?php echo $s['email'] ?></td>
                                <td><?php echo $s['phone'] ?></td>
                                <td><?php echo show_date($s['date_created']) ?></td>
