                            </tr>
                        <?php endforeach; ?>
                    </tbody>
                </table>

            </div>
            <div class="pagination">
                <?php
                $config = getCacheDB('configs');
                $page = ceil($count / $row_per_page);
                $current_page = ceil($start / $config['page_number']) + 1;
                $prev = $start == 0 ? 0 : $start - $config['page_number'];
                $next = $current_page == $page ? $start : $start + $config['page_number'];
                ?>
                <ul>
                    <li><a href="customer/index?start=<?php echo $prev ?>" <?php echo $start == 0 ? "class='disabled'" : "" ?>
                           onclick="call_ajax_load_content(this, 'Khách hàng');
                        return false;">Prev</a></li>

                    <?php for ($i = 1; $i <= $page; $i++): ?> 
                        <li><a href="customer/index?start=<?php echo ($config['page_number'] * ($i - 1)) ?>" <?php echo $i == $current_page ? "class='current'" : '' ?>
                               onclick="call_ajax_load_content(this, 'Khách hàng');
                            return false;"><?php echo $i ?></a></li>
                        <?php endfor; ?>
                    <li><a href="customer/index?start=<?php echo $next ?>" <?php echo $current_page == $page ? "class='disabled'" : "" ?>
                           onclick="call_ajax_load_content(this, 'Khách hàng');
                        return false;">Next</a></li>
                </ul>
            </div>
        </form>   
    </div>
</div>

