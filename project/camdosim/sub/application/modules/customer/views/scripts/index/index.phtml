            $posts = $this->posts;
            $row_per_page = $this->row_per_page;
            ?>
            <div class="btn-toolbar">
                <button class="btn btn-primary" type="button" onclick="call_ajax_load_content(this, 'Thêm khách hàng', 'customer/index/add');"><i class="icon-plus"></i>Tạo mới</button>
